<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand fw-bold">MOVIEFLIX</a>
    <form class="d-flex" role="search">
      <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
  </div>
</nav>

<div class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <%= image_tag 'avengers', class:"d-block banner" %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'joker', class:"d-block banner" %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'prince-persia', class:"d-block banner" %>
    </div>
    <div class="carousel-item">
      <%= image_tag 'batman', class:"d-block banner" %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="d-flex justify-content-between">
    <h2 class="text-white mb-4">Genres</h2>
    <%= link_to new_list_path, class: 'text-decoration-none text-reset  align-content-center' do %>
      <i class="fa-solid fa-plus text-white fs-4"></i>
    <% end %>
  </div>

  <div class="d-flex">
    <% @lists.each do |list| %>
      <div class="container">
        <%= link_to list_path(list), class: 'text-decoration-none' do %>
          <div class="card rounded">
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>)">
              <h3 class="fw-boldr">
                <%= list.name %>
              </h3>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
