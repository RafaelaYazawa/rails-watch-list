<div class="container">
  <h1>Movie Lists</h1>
  <%= link_to '+', new_list_path, class: 'text-decoration-none text-reset' %>
  <div class="card">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="card-body border">
          <%= list.name %>
          <%= cl_image_tag("",
          width: 400, height: 300, crop: :fill) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
