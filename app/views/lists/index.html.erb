<div class="container">
  <h1>Movie Lists</h1>
  <%= link_to '+', new_list_path, class: 'text-decoration-none text-reset' %>
  <div class="card">
    <% @lists.each do |list| %>
      <%= link_to list_path(list) do %>
        <div class="card-body border">
          <%= list.name %>
          <% if list.photo.attached? %>
           <%= cl_image_tag list.photo.key %>
          <% else %>
            <%= image_tag 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
